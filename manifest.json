{
  "name": "Highlighted Sponsored Things",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Helps notice what is sponsored and what is not",
  "homepage_url": "http://shypeleg.wixsite.com/imaginationportrayed",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "src/bg/background.js"
    ],
    "persistent": true
  },
   "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "options_page": "src/options/index.html",
  "browser_action": {
    "default_icon": "icons/icon48.png",
    "default_title": "Sponsored... is it now?",
    "default_popup": "src/browser_action/browser_action.html"
  },
  "permissions": [
    "<all_urls>",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "src/inject/inject.js"
      ],
      "css": [
        "src/inject/inject.css"
      ]
    }
  ]
}